{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=entradas_db;Username=postgres;Password=password"
  },
  "VerificadorEventos": {
    "BaseUrl": "http://localhost:5001",
    "ApiKey": "your-eventos-api-key",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerDurationSeconds": 30
  },
  "VerificadorAsientos": {
    "BaseUrl": "http://localhost:5002", 
    "ApiKey": "your-asientos-api-key",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerDurationSeconds": 30
  },
  "Logging": {
    "EnableEntityFrameworkLogging": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Information"
    }
  }
}